# ==============================================================================
# FINISHING TOUCHES
# ------------------------------------------------------------------------------
# Launch these programs to greet the user when the environment is ready.
# ==============================================================================

# Set a random wallpaper with Feh
exec --no-startup-id feh --bg-fill ~/Images/2zOacX.png

# Start every session with the preferred terminal emulator centered
exec                 $TERMINAL

# Execute .config/autostart in every sesion
exec dex -ae i3


# Do not lock after timeout
exec --no-startup-id xset s off
exec --no-startup-id xset -dpms
exec --no-startup-id xset s noblank


# set minimum light
exec --no-startup-id light -Nr 5

